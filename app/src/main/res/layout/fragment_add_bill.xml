<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- عنوان قبض -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_title"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bill_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- مبلغ -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_amount"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/amount_hint"
            app:suffixText="تومان">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- تاریخ سررسید (برای قبض‌های غیرتکراری) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_due_date"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/due_date"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_calendar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- روز سررسید (برای قبض‌های تکراری) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_day_of_month"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/day_of_month"
            android:visibility="gone"
            app:suffixText="@string/day_suffix">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_day_of_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- تکراری -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_recurring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/is_recurring" />

        <!-- نوع تکرار -->
        <Spinner
            android:id="@+id/spinner_recurring_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_background"
            android:visibility="gone" />

        <!-- تعداد تکرار -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_recurrence_count"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/recurrence_count"
            android:visibility="gone"
            app:suffixText="@string/recurrence_times">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_recurrence_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="12" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- یادآوری -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/notify_before"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:valueFrom="0"
            android:valueTo="7"
            android:stepSize="1"
            app:labelBehavior="gone" />

        <TextView
            android:id="@+id/tv_notify_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="۱ روز قبل از سررسید"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface" />

        <!-- دکمه ذخیره -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="@string/save"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

